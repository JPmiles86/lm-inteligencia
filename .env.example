# Inteligencia Multi-Industry Website Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/inteligencia_db"

# API Configuration
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_API_TIMEOUT=10000

# OpenAI Configuration (for image generation)
OPENAI_API_KEY="sk-your-openai-api-key-here"
VITE_OPENAI_MODEL="dall-e-3"

# TinyMCE Cloud API Key
# Get your API key from: https://www.tiny.cloud/auth/signup/
# Documentation: https://www.tiny.cloud/docs/tinymce/latest/basic-setup/
REACT_APP_TINYMCE_API_KEY="your-tinymce-api-key-here"

# Image Storage
VITE_IMAGE_UPLOAD_URL="http://localhost:3000/api/upload"
VITE_IMAGE_BASE_URL="http://localhost:3000/images"

# Authentication
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="24h"

# Development Settings
VITE_DEBUG=true
VITE_ENVIRONMENT="development"

# Tenant Configuration
VITE_DEFAULT_TENANT_ID="laurie-inteligencia"

# Subdomain Configuration
VITE_BASE_DOMAIN="inteligencia.com"
VITE_DEVELOPMENT_DOMAIN="localhost:3001"

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_ANALYTICS=true

# Performance
VITE_CACHE_DURATION=3600000
VITE_MAX_UPLOAD_SIZE=10485760
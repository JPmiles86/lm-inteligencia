{
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "includeFiles": "{api,server,src/db}/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/((?!admin).*)",
      "has": [
        {
          "type": "host",
          "value": "inteligenciadm.com"
        }
      ],
      "destination": "https://hospitality.inteligenciadm.com/$1",
      "permanent": false
    },
    {
      "source": "/((?!admin).*)",
      "has": [
        {
          "type": "host",
          "value": "www.inteligenciadm.com"
        }
      ],
      "destination": "https://hospitality.inteligenciadm.com/$1",
      "permanent": false
    }
  ]
}